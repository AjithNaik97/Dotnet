@{
    <form asp-action="SearchByStatus" method="post">
        Enter Status: <input type="text" name="stat" />
        <input type="submit" value="Search" />
    </form>
    <ol>
    @if((List<Students>)ViewData["catalog"]!=null)
    {
            var students = (List<Students>)ViewData["catalog"];
            foreach(Students stud in students)
            {
                <li>
                    @stud.Id
                    @stud.Name
                    @stud.Email
                    @stud.Phone
                    @stud.Address
                    @stud.Admission_Date
                    @stud.Fees
                    @stud.Status
                </li>
            }
        }
    </ol>
}
