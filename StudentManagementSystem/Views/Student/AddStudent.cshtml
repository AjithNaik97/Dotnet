@{
    <h1>Add Student Details</h1>
    <form asp-action="AddStudent" method="post">
        <!--id, name, email,phone,  address, admissionDate, fees, status-->
        ID: <input type="number" name="id" /><br />
        Name: <input type="text" name="name" /><br />
        Email: <input type="text" name="email" /><br />
        Mobile No: <input type="number" name="phone" /><br />
        Address: <input type="text" name="address" /><br />
        Admission Date: <input type="text" name="admissionDate" /><br />
        Fees: <input type="number" name="fees" /><br />
        Status: <input type="number" name="status" /><br />
        <input type="submit" value="Add Student" />
    </form>
}
